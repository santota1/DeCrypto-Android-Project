<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstlayout"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_alignBottom="@+id/titlelayout"
        android:layout_alignTop="@+id/titlelayout"
       android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Symbol"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/ranktv"
            android:paddingLeft="8dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Rank "
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/white"
           />
       <!-- <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/favoriteicon"
            android:src="@mipmap/favorite_select"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:id="@+id/titlelayout"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_toRightOf="@+id/firstlayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pricelayout"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_below="@+id/titlelayout"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/localpricelayout"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price "
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:text="price_usd"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/btclayout"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC  "
                    android:textColor="@color/white"
                    android:textSize="16dp"
                   />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price_btc"
                    android:textSize="16dp"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/changelayout"
            android:orientation="horizontal"
            android:layout_below="@+id/titlelayout"
            android:layout_margin="2dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/h1changelayout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1H  "
                    android:textSize="16dp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h change"
                    android:textSize="16dp"
                    android:textColor="#d32f2f" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/h24changelayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1D  "
                    android:textSize="16dp"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24hcnage"
                    android:textSize="16dp"

                    android:textColor="#00c853" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/h7dchangelayout"
                android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1W  "
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textView25"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7dchange" />
            </LinearLayout>


         </LinearLayout>

    </LinearLayout>
</RelativeLayout>